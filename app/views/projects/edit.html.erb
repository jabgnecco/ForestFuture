<h1>Edit Project</h1>

<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence %>

  <div class="form_inputs">
    <%= f.input :name %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update Project", class: "btn-primary" %>
  </div>
<% end %>

<%= link_to 'Back', projects_path, class: "btn btn-secondary" %>
